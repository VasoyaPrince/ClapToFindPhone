<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PocketPopUpActivity">

    <ImageView
        android:id="@+id/ivPopup"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/pocket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pocket Mode"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/ivPopup"
        app:layout_constraintStart_toStartOf="@+id/ivPopup"
        app:layout_constraintTop_toBottomOf="@+id/ivPopup" />

</androidx.constraintlayout.widget.ConstraintLayout>